{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-undef-init": "warn",
    "no-await-in-loop": "warn",
    "no-bitwise": "warn",
    "curly": "error",
    "eqeqeq": "error",
    "no-extend-native": "error",
    "no-useless-escape": "error",
    "semi": "warn",
    "comma-dangle": "warn",
    "indent": ["error", 2]
  }
}
